<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hugo.act5.Main4Activity">

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finalizar  compra"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="462dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/fr" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2"
        app:srcCompat="@drawable/er" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView4"
        app:srcCompat="@drawable/hhh" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GTX 1060"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText3" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView4"
        android:text="Teclado"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView5"
        android:text="HDD"
        android:textSize="50sp" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:checked="false"
        android:text="ToggleButton"
        android:textOff="agregar"
        android:textOn="agregado"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignParentEnd="true" />

    <ToggleButton
        android:id="@+id/toggleButton4"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:checked="false"
        android:text="ToggleButton"
        android:textOff="agregar"
        android:textOn="agregado"
        android:layout_above="@+id/textView9"
        android:layout_alignParentEnd="true" />

    <ToggleButton
        android:id="@+id/toggleButton5"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="ToggleButton"
        android:textOff="agregar"
        android:textOn="agregado"
        android:layout_below="@+id/textView9"
        android:layout_toEndOf="@+id/editText3" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_above="@+id/textView8"
        android:layout_toEndOf="@+id/imageView2"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="4000" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_alignTop="@+id/toggleButton4"
        android:layout_toStartOf="@+id/toggleButton5"
        android:ems="10"
        android:inputType="number"
        android:text="550" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_toStartOf="@+id/toggleButton4"
        android:ems="10"
        android:inputType="number"
        android:text="700" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="30sp"
        android:inputType="number"
        android:gravity="center"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignEnd="@+id/toggleButton4"
        android:layout_toEndOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView5"
        android:text="Total:"
        android:textSize="50sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button11"
        android:gravity="center"
        android:layout_alignStart="@+id/button11"
        android:layout_marginBottom="14dp"
        android:text="pagar"
        android:textSize="30sp" />

</android.widget.RelativeLayout>
